<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/colorFondo">

    <LinearLayout
        android:id="@+id/fijo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center"

        app:layout_constraintBottom_toTopOf="@+id/divider">

        <!--- Label para estacion -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/estacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/estacion"

                android:textAlignment="viewStart"
                android:textColor="@color/colorLetra"
                android:textSize="30sp"

                app:layout_constraintBottom_toTopOf="@id/fijo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--- Spinner para elección de estación -->
            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/spinnerestacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBoton"
                android:textColor="@color/colorLetra"
                android:textSize="30sp">

            </com.weiwangcn.betterspinner.library.BetterSpinner>
        </LinearLayout>
    </LinearLayout>

    <!--- Separa los datos de la estacion -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLetra"

            app:layout_constraintTop_toBottomOf="@id/fijo" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <!--- Label para tiempo -->
                    <TextView
                        android:id="@+id/tiempo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tiempo"
                        android:textAlignment="center"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/tiempoValor"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/refrescar"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <!--- Label para temperatura -->
                    <TextView
                        android:id="@+id/temperatura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/temperatura"
                        android:textAlignment="center"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/temperaturaValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28ºC"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <!--- Label para humedad -->
                    <TextView
                        android:id="@+id/humedad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/humedad"
                        android:textAlignment="center"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/humedadValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30%"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <!--- Label para Sensacion termica-->
                    <TextView
                        android:id="@+id/sensacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sensacion_termica"
                        android:textAlignment="center"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/sensacionValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28ºC"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <!--- Label para presion atmosferica -->
                    <TextView
                        android:id="@+id/presion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/presion_atmosferica"
                        android:textAlignment="center"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/presionValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18 Pa"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <!--- Etiqueta lluvia -->
                    <TextView
                        android:id="@+id/lluvia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lluvia"
                        android:textAlignment="center"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lluviaValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 dm/m3"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <!--- Etiqueta luz -->
                    <TextView
                        android:id="@+id/luz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nivel_de_luz"
                        android:textAlignment="center"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/luzValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="46 Ω"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <!--- Etiqueta anemómetro -->
                    <TextView
                        android:id="@+id/anemometro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/anemometro"
                        android:textAlignment="center"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/anemometroValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <!--- Calidad del aire -->
                    <TextView
                        android:id="@+id/aire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calidad_del_aire"
                        android:textAlignment="center"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/calidadValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buena"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <!--- Etiqueta radiación -->
                    <TextView
                        android:id="@+id/radiacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nivel_de_radiacion"
                        android:textAlignment="center"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/radiacionValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textColor="@color/colorLetra"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/refrescar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/refrescar"
                        android:onClick="refrescarButton"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/graficas"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/graficas"
                        android:onClick="graficasBoton"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>